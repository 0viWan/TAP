<div class="row main-row">
  <div class="col-xs-9 col-sm-4 col-md-4 col-lg-3 map-search">
    <form id="search-box">
      <div class="input-group search-bar">
        <input type="text" class="  search-query form-control" placeholder="Search by City, State"/>
        <span class="input-group-btn">
            <button class="btn btn-danger submit-button" type="submit">
            <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
      </div>
    </form>
    <div class="alert alert-danger search-error">
      <h5>Sorry! Data for the specified city and state does not exist.</h5>
    </div>
  </div>
  <div class="col-sm-4 col-md-4 sidebar sidebar-right pull-right">
    <div class="panel-group sidebar-body" id="accordion-right" style="display: none;">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#taskpane">
              <i class="fa fa-tasks"></i>
              Charts Panel
            </a>
            <span class="pull-right slide-submenu">
              <i class="fa fa-chevron-right"></i>
            </span>
          </h4>
        </div>
        <div id="taskpane" class="panel-collapse collapse in">
          <div class="panel-body" id="chart-sidepanel-body">


<ul class="nav nav-tabs nav-justified">
  <li role="presentation" class="active" id="nation-tab"><a href="#">Nationwide</a></li>
  <li role="presentation" id="city-tab"><a href="#">City-Specific</a></li>
</ul>


            <div id="city-specific-charts">
              <div class="linechart-holder-master clearfix hover-div vertical-align-middle sidebar-holders">
                 <div id="linechart-container-sidebar" class="small-chart col-md-6"></div>
                 <div id="no-city-selected">
                  <h4>Select a city to view its charts!</h4>
                </div>
              </div>
              <hr>
              <div class="heatmap-holder-master clearfix hover-div vertical-align-middle sidebar-holders">
                <div id="heatmap-container-sidebar" class="small-chart col-md-6"></div>
              </div>
              <div class="news-holder-master clearfix hover-div vertical-align-middle sidebar-holders">
                <div id="news-container-sidebar" class="col-md-12"></div>
              </div>
            </div>



            <div id="nationwide-charts">
              <div class="ambient-temp-holder-master clearfix hover-div vertical-align-middle sidebar-holders">
                 <div id="ambient-temp-container-sidebar" class="small-chart col-md-6"></div>
              </div>
              <hr>
              <div class="humidity-holder-master clearfix hover-div vertical-align-middle sidebar-holders">
                <div id="humidity-container-sidebar" class="small-chart col-md-6"></div>
             </div>
            </div>



          </div>
        </div>
      </div>
    </div>
  </div>
</div>
