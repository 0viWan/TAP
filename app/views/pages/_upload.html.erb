<%= form_tag({action: :upload}, multipart: true) do %>

  <div class="form-group">
    <%= label_tag :data, "Upload File" %>
    <%= file_field_tag :data, accept: 'text/csv' %>
    <p class="help-block">Please upload CSV files in the correct format</p>
  </div>
  <div class="form-group">
      <%= label_tag (:city) %>
      <%= text_field_tag(:city, nil, class: "form-control") %>
  </div>
  <div class="form-group">
      <%= label_tag (:state) %>
      <%= text_field_tag(:state, nil, class: "form-control") %>
  </div>
  <div class="form-group">

      <%= label_tag (:date) %>
      <%= date_field(:date_input, :date, class: "form-control") %>

  </div>
  <div class="form-group">

      <%= submit_tag("Upload", class: "btn btn-default") %>

  </div>
<% end %>
